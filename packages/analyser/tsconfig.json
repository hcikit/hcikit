{
  "extends": "../../tsconfig.json",
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/setupTests.ts"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "composite": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "downlevelIteration": true
  },
  "references": [
    {
      "path": "../react"
    },
    {
      "path": "../workflow"
    }
  ]
}

{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "example",
    "example-typescript",
    "docs"
  ],
  "nohoist": [
    "**/html-minifier-terser"
  ],
  "scripts": {
    "es-check": "es-check es5 'packages/react/dist/**/*.js' 'packages/workflow/dist/**/*.js'",
    "lint": "eslint example/src packages/react/src packages/workflow/src",
    "test": "yarn jest --verbose --colors",
    "test:watch": "jest --watch --verbose --colors",
    "build": "yarn workspaces foreach --no-private -v run build",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/tsconfig.tsbuildinfo packages/*/dist"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "@skypack/package-check": "^0.2.2",
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "babel-jest": "^27.2.0",
    "es-check": "^6.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "jest": "^27.2.0",
    "lerna": "^4.0.0",
    "prettier": "^2.4.0",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  },
  "version": "0.0.0",
  "dependencies": {
    "@babel/core": "^7.15.5"
  }
}

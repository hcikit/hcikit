{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "example",
    "example-typescript",
    "docs"
  ],
  "nohoist": [
    "**/html-minifier-terser"
  ],
  "scripts": {
    "es-check": "es-check es5 'packages/react/dist/**/*.js' 'packages/workflow/dist/**/*.js'",
    "lint": "eslint example/src packages/react/src packages/workflow/src",
    "test": "yarn jest --verbose --colors",
    "test:watch": "jest --watch --verbose --colors",
    "build": "yarn workspaces foreach --no-private -vi run build",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/tsconfig.tsbuildinfo packages/*/dist"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.14.8",
    "@babel/preset-react": "^7.14.5",
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "babel-jest": "^27.0.6",
    "es-check": "^5.2.4",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "jest": "^27.0.6",
    "lerna": "^4.0.0",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.5"
  },
  "version": "0.0.0",
  "dependencies": {
    "@babel/core": "^7.14.8"
  }
}

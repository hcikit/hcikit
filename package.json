{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "example",
    "example-typescript",
    "docs"
  ],
  "nohoist": [
    "**/html-minifier-terser"
  ],
  "scripts": {
    "es-check": "es-check es5 'packages/react/dist/**/*.js' 'packages/workflow/dist/**/*.js'",
    "lint": "eslint example/src packages/react/src packages/workflow/src",
    "test": "yarn jest --verbose --colors",
    "test:watch": "jest --watch --verbose --colors",
    "build": "yarn workspaces run build",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/tsconfig.tsbuildinfo packages/*/dist example*/build example*/node_modules"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.14.8",
    "@babel/preset-react": "^7.14.5",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@types/deep-freeze": "^0.1.2",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.0",
    "@types/react": "^17.0.14",
    "@types/styled-components": "^5.1.11",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "@types/cross-spawn": "^6.0.2",
    "@types/fs-extra": "^9.0.11",
    "@types/mime-types": "^2.1.0",
    "@types/yargs": "^17.0.0",
    "babel-jest": "^27.0.6",
    "cross-env": "^7.0.2",
    "deep-freeze": "0.0.1",
    "es-check": "^5.2.4",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "jest": "^27.0.6",
    "jest-diff": "^27.0.6",
    "lerna": "^4.0.0",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "regenerator-runtime": "^0.13.5",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.5"
  },
  "version": "0.0.0"
}
{
  "compilerOptions": {
    "target": "es5",
    "jsx": "react",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "esnext"],
    "downlevelIteration": true,

    // "module": "ES2015",
    "moduleResolution": "node",
    "paths": {
      "@hciikit/workflow/*": ["packages/workflow/src/*"],
      "@hciikit/react/*": ["packages/react/src/*"]
    }
  },
  "exclude": ["./coverage"]
}

{
  "extends": "../tsconfig.json",
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "**/*.test.ts"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "composite": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "allowJs": true
  },
  "references": [
    {
      "path": "../packages/react"
    }
  ]
}
